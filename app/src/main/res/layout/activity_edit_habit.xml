<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    tools:context=".activity.EditHabitActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/icon_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_edit_habit_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/icon_heart"
        app:layout_constraintTop_toTopOf="@id/tv_edit_habit_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_habit_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_edit_habit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toEndOf="@+id/img_edit_habit_icon"
        android:text="습관타이틀"
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_edit_habit_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행 중"
        android:padding="3dp"
        android:background="#FAF1FF"
        android:textColor="#C28BCF"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintStart_toEndOf="@id/tv_edit_habit_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_habit_title"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_habit"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/icon_edit"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_edit_habit_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_habit_title"
        app:layout_constraintEnd_toStartOf="@+id/btn_edit_habit_trash"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_edit_habit_trash"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/icon_trash"
        app:layout_constraintTop_toTopOf="@id/btn_edit_habit"
        app:layout_constraintBottom_toBottomOf="@+id/btn_edit_habit"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_edit_habit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_habit_title"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>