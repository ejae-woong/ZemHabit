<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:id="@+id/row_habit_background"
    android:background="@drawable/background_habit">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_habit_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행 상황"
        android:textColor="#444488"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_habit_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_habit_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="습관내용입니다 ㅁㄴㅇㄻㄴㄹㅇ"
        android:textSize="20sp"
        android:fontFamily="@font/noto_sans_bold"
        android:lines="2"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_habit_dayofweek"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_habit_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:text="월화수목금토"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_bold"
        android:lines="1"
        android:textColor="#80000000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_habit_term"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_habit_dayofweek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="22.06.02"
        android:textSize="14sp"
        android:fontFamily="@font/noto_sans_bold"
        android:lines="1"
        android:textColor="#80000000"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_habit_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/img_habit_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/icon_backpack"/>

</androidx.constraintlayout.widget.ConstraintLayout>